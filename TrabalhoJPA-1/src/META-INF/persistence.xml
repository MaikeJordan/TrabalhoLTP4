  <persistence-unit name="TrabalhoJPA" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>br.edu.ifnmg.tads.TrabalhoJPA.DoMainModel.Pessoa</class>
