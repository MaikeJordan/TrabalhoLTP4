    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/TrabalhoJPA?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.password" value=""/>
